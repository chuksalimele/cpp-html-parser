{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "BUILD EXE (32-bit)",
            "command": "C:\\msys64\\mingw32\\bin\\g++.exe",
            "args": [
                "-m32",
                "-fdiagnostics-color=always",
                "-O3", // Optimization level 2 (you can change this to -O3 for higher optimization)                
                "-std=c++20", // Enable C++20 standard
                "-DBUILD_EXE",
                "-g",
                "-I${workspaceFolder}\\test",
                "-I${workspaceFolder}\\include",
                "${workspaceFolder}/*.cpp",
                "-o",
                "${workspaceFolder}\\build\\chtml-parser.dll",
                "-o",
                "${workspaceFolder}\\build\\main.exe",
                "-static-libgcc",
                "-static-libstdc++",
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "detail": "Task generated by Debugger."
        },
        {
            "type": "cppbuild",
            "label": "BUILD DLL (32-bit)",
            "command": "C:\\msys64\\mingw32\\bin\\g++.exe",
            "args": [
                "-m32",
                "-fdiagnostics-color=always",
                "-O3", // Optimization level 2 (you can change this to -O3 for higher optimization)
                "-std=c++20", // Enable C++20 standard
                "-g",
                "-DBUILD_DLL",
                "-shared",
                "-I${workspaceFolder}\\test",
                "-I${workspaceFolder}\\include",
                "${workspaceFolder}/*.cpp",
                "-o",
                "${workspaceFolder}\\build\\chtml_parser.dll",
                "-Wl,--out-implib=${workspaceFolder}\\build\\chtml_parser.lib",
                "-Wl,--output-def=${workspaceFolder}\\build\\chtml_parser.def",
                "-static-libgcc",
                "-static-libstdc++",
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "detail": "Task generated by Debugger."
        },
        {
            "label": "Build All",
            "dependsOrder": "sequence",
            "dependsOn": [
                "BUILD EXE (32-bit)",
                "BUILD DLL (32-bit)"
            ],
            "group": "build"
        }
    ],
    "version": "2.0.0"
}